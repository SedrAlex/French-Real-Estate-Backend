//commands for prisma create data 
// first npx prisma db push
// npx prisma generatae

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url = env("DATABASE_URL")
}
model User{
    id   String   @id @default(auto()) @map("_id") @db.ObjectId
    name    String?
    email   String  @unique
    image  String?
    bookedVisits   Json[]
    favResidencesID String[] @db.ObjectId
    ownerResidencies  Residency[] @relation("Owner")

}

model Residency{
    id   String  @id @default(auto()) @map("_id") @db.ObjectId
    title String
    description String
    price Int
    address String
    city  String
    country String
    image String
    facilities Json
    userEmail String
    owner   User @relation("Owner", fields: [userEmail], references: [email])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    @@unique(fields:[address,userEmail])
}